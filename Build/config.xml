<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adamcmiel.app.xrp" version="0.6.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>XRP</name>
    <description>
      A ripple wallet for your phone
    </description>
    <author email="adam@anypay.io" href="https://anypay.io">
      Anypay Dev Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <platform name="android">
        <icon src="res/android/mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>

</widget>
