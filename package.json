{
  "name": "XRP",
  "version": "0.1.0",
  "description": "iOS client for Ripple network",
  "main": "src/index.coffee",
  "browserify": {
    "transform": [
      "babelify",
      "coffeeify",
      "famousify",
      "jadeify",
      "stylify",
      "cssify",
      "brfs"
    ]
  },
  "scripts": {
    "start": "npm run build && npm run cordova",
    "install": "bower install",
    "test": "mocha --compilers coffee:coffee-script/register test/**/*",
    "copy-assets": "cp -R src/lib/vendor static",
    "build": "npm run copy-assets && browserify --extension='.coffee' src/index.js | uglifyjs > static/bundle.js",
    "watch": "npm run copy-assets && watchify --extension='.coffee' src/index.js -o static/bundle.js --debug --verbose",
    "cordova": "npm run cordova-copy && npm run cordova-build",
    "cordova-copy": "cp -R static/ Build/www/",
    "cordova-build": "cd Build && cordova build",
    "android": "npm run android-copy && npm run android-build",
    "android-copy": "cp -R static/ Build-Android/assets/www/",
    "android-build": "cd Build-Android && ./cordova/build --debug",
    "android-deploy": "adb install -r Build-Android/bin/XRP-debug.apk",
    "serve": "serve --compress -p 3333 static/",
    "dev": "npm run serve & npm run watch",
    "lint-eslint": "eslint src/",
    "lint-jscs": "jscs src/",
    "lint": "npm run lint-eslint; npm run lint-jscs"
  },
  "devDependencies": {
    "eslint": "^0.6.2",
    "jscs": "^1.5.7",
    "serve": "^1.4.0",
    "watchify": "^0.10.2"
  },
  "author": "Adam Cmiel adamcmiel@gmail.com",
  "license": "MIT",
  "dependencies": {
    "babelify": "^5.0.3",
    "backbone": "^1.1.2",
    "bluebird": "2.5.2",
    "brfs": "^1.1.1",
    "browserify": "^5.9.1",
    "chai": "^1.10.0",
    "coffee-script": "^1.7.1",
    "coffeeify": "^0.7.0",
    "cssify": "^0.5.1",
    "cssy": "^1.0.1",
    "famous": "^0.3",
    "famous-polyfills": "^0.2.2",
    "famousify": "^0.1.5",
    "insert-css": "^0.2.0",
    "jade": "^1.5.0",
    "jadeify": "^2.5.0",
    "jquery": "^2.1.1",
    "mocha": "^2.0.1",
    "polymerize": "^1.0.0",
    "prova": "^2.1.1",
    "provify": "^0.1.3",
    "should": "^4.4.1",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.6.0",
    "stylify": "^0.1.6",
    "stylus": "^0.47.3",
    "superagent": "^0.21.0",
    "uglify-js": "^2.4.16",
    "xrp-app-lib": "git+ssh://git@github.com/adamcmiel/xrp-app-lib#global"
  },
  "repository": "git@bitbucket.com:adamcmiel/xrp"
}
