body {
   font-family: "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
   font-weight: 300;
}

h1
    font-size 32px

h2
    font-size 24px

h3
    font-size 18px

h4
    font-size 16px

p
    font-size 16px

.bold
    font-weight 400

.light
    font-weight 200

.lighter
    font-weight 100

.vertical-center 
    position: relative;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);

.vertical-bottom
    position: relative;
    top: 100%;
    -webkit-transform: translateY(0%);
    transform: translateY(0%);
