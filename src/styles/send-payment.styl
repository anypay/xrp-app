base-color = send-payment-base-color 

form.send-payments-content-form
    color: grays[dark]

.send-payment-background
    //background base-color[medium];
    background white

.send-payment-header
    padding-left 16px
    background base-color[darker];

.send-payment-label-text
    color grays[dark];

.send-payment-label-sprite
    color grays[dark];

input
    display block
    margin 40px auto 0
    width 100%
    border none
    outline none
    border 0
    border-radius 0
    border-bottom 1px solid base-color[dark];
    -webkit-appearance none

    &:active, &:focus
        border-bottom 1px solid pinks[dark];

    &#amount-input
        font-size 13px

@media (max-width: 360px)
    input#account-input
        font-size 11pt

@media (min-width: 360px)
    input#account-input
        font-size 13pt

